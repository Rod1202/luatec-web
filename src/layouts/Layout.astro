---
import { SEO } from "astro-seo";
import "../styles/global.css";

interface Props {
	title?: string;
    description?: string;
    image?: string;
    canonical?: string;
}

const { 
    title = "Luatec Solutions | Infraestructura TI y Ciberseguridad",
    description = "Soluciones integrales en infraestructura IT, ciberseguridad y consultoría tecnológica para empresas.",
    image = "/luatec-og.jpg",
    canonical
} = Astro.props;
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/luatec.ico" />
		<meta name="generator" content={Astro.generator} />
        
        <SEO
            title={title}
            description={description}
            canonical={canonical}
            openGraph={{
                basic: {
                    title: title,
                    type: "website",
                    image: image,
                },
                image: {
                    alt: "Luatec Solutions Logo",
                },
            }}
            extend={{
                meta: [
                    { name: "twitter:card", content: "summary_large_image" },
                    { name: "twitter:title", content: title },
                    { name: "twitter:description", content: description },
                    { name: "twitter:image", content: image },
                ],
            }}
        />

        <link href="https://fonts.googleapis.com" rel="preconnect"/>
        <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect"/>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet"/>
        <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet"/>
	</head>
	<body class="font-display bg-background-light dark:bg-background-dark text-slate-900 dark:text-slate-100 transition-colors duration-300">
        <div class="fixed inset-0 -z-50 w-full h-full">
            <img 
                src="/img/background.avif" 
                alt="Background" 
                class="w-full h-full object-cover object-center opacity-100 blur-sm"
            />
            <div class="absolute inset-0 bg-black/40"></div> <!-- Added overlay for better text contrast -->
        </div>
		<slot />
        <script>
            import { initScrollAnimations } from "../scripts/scroll-animations.js";
            document.addEventListener("DOMContentLoaded", initScrollAnimations);
        </script>
	</body>
</html>


