<div class="glass-card p-8 md:p-12 rounded-[2.5rem] shadow-2xl mb-12">
    <form action="#" class="space-y-8" method="POST">
        <div class="grid md:grid-cols-2 gap-6">
            <div>
                <label class="form-label-style" for="name">Nombre Completo</label>
                <input class="form-input-style" id="name" placeholder="Ej. Juan Pérez" required="" type="text"/>
            </div>
            <div>
                <label class="form-label-style" for="email">Correo Corporativo</label>
                <input class="form-input-style" id="email" placeholder="juan@empresa.com" required="" type="email"/>
            </div>
        </div>
        <div class="grid md:grid-cols-2 gap-6">
            <div>
                <label class="form-label-style" for="phone">Teléfono de Contacto</label>
                <input class="form-input-style" id="phone" placeholder="+51 000 000 000" type="tel"/>
            </div>
            <div>
                <label class="form-label-style" for="company">Empresa</label>
                <input class="form-input-style" id="company" placeholder="Nombre de tu organización" required="" type="text"/>
            </div>
        </div>
        <div class="grid md:grid-cols-2 gap-6">
            <div>
                <label class="form-label-style">Tamaño de la Empresa</label>
                <div class="grid grid-cols-2 gap-3">
                    <label class="cursor-pointer">
                        <input class="sr-only peer" name="size" type="radio" value="1-10"/>
                        <div class="px-2 py-2 text-center text-xs border border-slate-200 dark:border-white/10 rounded-lg text-slate-500 dark:text-slate-400 peer-checked:bg-primary/20 peer-checked:border-primary peer-checked:text-slate-900 dark:peer-checked:text-white transition-all">1-10</div>
                    </label>
                    <label class="cursor-pointer">
                        <input class="sr-only peer" name="size" type="radio" value="11-50"/>
                        <div class="px-2 py-2 text-center text-xs border border-slate-200 dark:border-white/10 rounded-lg text-slate-500 dark:text-slate-400 peer-checked:bg-primary/20 peer-checked:border-primary peer-checked:text-slate-900 dark:peer-checked:text-white transition-all">11-50</div>
                    </label>
                    <label class="cursor-pointer">
                        <input class="sr-only peer" name="size" type="radio" value="51-200"/>
                        <div class="px-2 py-2 text-center text-xs border border-slate-200 dark:border-white/10 rounded-lg text-slate-500 dark:text-slate-400 peer-checked:bg-primary/20 peer-checked:border-primary peer-checked:text-slate-900 dark:peer-checked:text-white transition-all">51-200</div>
                    </label>
                    <label class="cursor-pointer">
                        <input class="sr-only peer" name="size" type="radio" value="200+"/>
                        <div class="px-2 py-2 text-center text-xs border border-slate-200 dark:border-white/10 rounded-lg text-slate-500 dark:text-slate-400 peer-checked:bg-primary/20 peer-checked:border-primary peer-checked:text-slate-900 dark:peer-checked:text-white transition-all">200+</div>
                    </label>
                </div>
            </div>
            <div>
                <label class="form-label-style">Áreas de Interés</label>
                <div class="grid grid-cols-2 gap-3">
                    <label class="flex items-center gap-2 p-2 rounded-xl border border-slate-200 dark:border-white/5 bg-slate-50 dark:bg-white/5 cursor-pointer hover:bg-slate-100 dark:hover:bg-white/10 transition-colors">
                        <input class="rounded border-slate-300 dark:border-white/10 bg-transparent text-primary focus:ring-primary" type="checkbox"/>
                        <span class="text-xs text-slate-600 dark:text-slate-300">Infraestructura</span>
                    </label>
                    <label class="flex items-center gap-2 p-2 rounded-xl border border-slate-200 dark:border-white/5 bg-slate-50 dark:bg-white/5 cursor-pointer hover:bg-slate-100 dark:hover:bg-white/10 transition-colors">
                        <input class="rounded border-slate-300 dark:border-white/10 bg-transparent text-primary focus:ring-primary" type="checkbox"/>
                        <span class="text-xs text-slate-600 dark:text-slate-300">Ciberseguridad</span>
                    </label>
                    <label class="flex items-center gap-2 p-2 rounded-xl border border-slate-200 dark:border-white/5 bg-slate-50 dark:bg-white/5 cursor-pointer hover:bg-slate-100 dark:hover:bg-white/10 transition-colors">
                        <input class="rounded border-slate-300 dark:border-white/10 bg-transparent text-primary focus:ring-primary" type="checkbox"/>
                        <span class="text-xs text-slate-600 dark:text-slate-300">Soporte/Help Desk</span>
                    </label>
                    <label class="flex items-center gap-2 p-2 rounded-xl border border-slate-200 dark:border-white/5 bg-slate-50 dark:bg-white/5 cursor-pointer hover:bg-slate-100 dark:hover:bg-white/10 transition-colors">
                        <input class="rounded border-slate-300 dark:border-white/10 bg-transparent text-primary focus:ring-primary" type="checkbox"/>
                        <span class="text-xs text-slate-600 dark:text-slate-300">Consultoría</span>
                    </label>
                </div>
            </div>
        </div>
        <div>
            <label class="form-label-style" for="challenge">Cuéntanos tu desafío actual</label>
            <textarea class="form-input-style min-h-[120px]" id="challenge" placeholder="¿Cómo podemos ayudarte?"></textarea>
        </div>
        <div class="grid md:grid-cols-1 gap-6">
            <div>
                <label class="form-label-style" for="timeline">Plazo estimado</label>
                <select class="form-input-style" id="timeline">
                    <option class="bg-slate-100 dark:bg-slate-900 text-slate-900 dark:text-white" value="inmediato">Inmediato</option>
                    <option class="bg-slate-100 dark:bg-slate-900 text-slate-900 dark:text-white" value="1-3-meses">1-3 meses</option>
                    <option class="bg-slate-100 dark:bg-slate-900 text-slate-900 dark:text-white" value="3-6-meses">3-6 meses</option>
                    <option class="bg-slate-100 dark:bg-slate-900 text-slate-900 dark:text-white" value="solo-info">Solo información</option>
                </select>
            </div>
        </div>
        <button class="w-full bg-primary hover:bg-blue-600 text-white font-bold py-4 rounded-xl shadow-lg shadow-primary/20 transition-all active:scale-[0.98] flex items-center justify-center gap-2" type="submit">
            Enviar Solicitud
            <span class="material-symbols-outlined">send</span>
        </button>
    </form>
</div>
