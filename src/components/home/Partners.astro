---
import { Image } from "astro:assets";
import appleLogo from "../../assets/logos/apple.webp";
import ciscoLogo from "../../assets/logos/cisco.webp";
import hpLogo from "../../assets/logos/hp.webp";
import hpeLogo from "../../assets/logos/hpe.webp";
import lenovoLogo from "../../assets/logos/lenovo.webp";
---
<section class="bg-transparent overflow-hidden w-full relative py-16 md:py-24" id="carousel-section">
    <div class="max-w-7xl mx-auto px-6 mb-12">
        <h2 class="text-xl md:text-2xl font-bold text-center text-white/50 tracking-[0.2em] uppercase">
            Nuestras Soluciones
        </h2>
    </div>
    
    <div class="max-w-7xl mx-auto px-6 relative">
        <!-- Fade Mask Container -->
        <div class="logos-mask overflow-hidden relative">
            <div class="flex w-max animate-scroll gap-20 items-center py-4">
                <!-- Set 1 -->
                <div class="flex items-center gap-20 shrink-0 grayscale hover:grayscale-0 transition-all duration-500">
                    <Image src={appleLogo} alt="Apple" width={144} height={144} quality="high" class="h-10 md:h-12 w-auto object-contain brightness-0 invert opacity-40 hover:opacity-100" loading="lazy" />
                    <Image src={ciscoLogo} alt="Cisco" width={120} height={120} quality="high" class="h-8 md:h-10 w-auto object-contain brightness-0 invert opacity-40 hover:opacity-100" loading="lazy" />
                    <Image src={hpLogo} alt="HP" width={144} height={144} quality="high" class="h-10 md:h-12 w-auto object-contain rounded-full opacity-40 hover:opacity-100" loading="lazy" />
                    <Image src={hpeLogo} alt="HPE" width={100} height={100} quality="high" class="h-6 md:h-8 w-auto object-contain brightness-0 invert opacity-40 hover:opacity-100" loading="lazy" />
                    <Image src={lenovoLogo} alt="Lenovo" width={100} height={100} quality="high" class="h-5 md:h-7 w-auto object-contain brightness-0 invert opacity-40 hover:opacity-100" loading="lazy" />
                </div>
                
                <!-- Set 2 -->
                <div class="flex items-center gap-20 shrink-0 grayscale hover:grayscale-0 transition-all duration-500">
                    <Image src={appleLogo} alt="Apple" width={144} height={144} quality="high" class="h-10 md:h-12 w-auto object-contain brightness-0 invert opacity-40 hover:opacity-100" loading="lazy" />
                    <Image src={ciscoLogo} alt="Cisco" width={120} height={120} quality="high" class="h-8 md:h-10 w-auto object-contain brightness-0 invert opacity-40 hover:opacity-100" loading="lazy" />
                    <Image src={hpLogo} alt="HP" width={144} height={144} quality="high" class="h-10 md:h-12 w-auto object-contain rounded-full opacity-40 hover:opacity-100" loading="lazy" />
                    <Image src={hpeLogo} alt="HPE" width={100} height={100} quality="high" class="h-6 md:h-8 w-auto object-contain brightness-0 invert opacity-40 hover:opacity-100" loading="lazy" />
                    <Image src={lenovoLogo} alt="Lenovo" width={100} height={100} quality="high" class="h-5 md:h-7 w-auto object-contain brightness-0 invert opacity-40 hover:opacity-100" loading="lazy" />
                </div>

                <!-- Set 3 -->
                <div class="flex items-center gap-20 shrink-0 grayscale hover:grayscale-0 transition-all duration-500">
                    <Image src={appleLogo} alt="Apple" width={144} height={144} quality="high" class="h-10 md:h-12 w-auto object-contain brightness-0 invert opacity-40 hover:opacity-100" loading="lazy" />
                    <Image src={ciscoLogo} alt="Cisco" width={120} height={120} quality="high" class="h-8 md:h-10 w-auto object-contain brightness-0 invert opacity-40 hover:opacity-100" loading="lazy" />
                    <Image src={hpLogo} alt="HP" width={144} height={144} quality="high" class="h-10 md:h-12 w-auto object-contain rounded-full opacity-40 hover:opacity-100" loading="lazy" />
                    <Image src={hpeLogo} alt="HPE" width={100} height={100} quality="high" class="h-6 md:h-8 w-auto object-contain brightness-0 invert opacity-40 hover:opacity-100" loading="lazy" />
                    <Image src={lenovoLogo} alt="Lenovo" width={100} height={100} quality="high" class="h-5 md:h-7 w-auto object-contain brightness-0 invert opacity-40 hover:opacity-100" loading="lazy" />
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .logos-mask {
        mask-image: linear-gradient(to right, transparent 0%, black 15%, black 85%, transparent 100%);
        -webkit-mask-image: linear-gradient(to right, transparent 0%, black 15%, black 85%, transparent 100%);
    }

    .animate-scroll {
        animation: scroll 30s linear infinite;
    }
    
    @keyframes scroll {
        0% { transform: translateX(0); }
        100% { transform: translateX(-33.33%); } /* Adjusted for 3 sets */
    }
</style>
