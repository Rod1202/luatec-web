---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/home/Hero.astro';
import TheConflict from '../components/home/TheConflict.astro';
import Partners from '../components/home/Partners.astro';
// Nosotros
import MissionVision from '../components/nosotros/MissionVision.astro';
import Values from '../components/nosotros/Values.astro';
import Team from '../components/nosotros/Team.astro';
import TeamMovil from '../components/nosotros/TeamMovil.astro';
// Soluciones
import SolutionsCarousel from '../components/soluciones/SolutionsCarousel.astro';
import CTA from '../components/nosotros/CTA.astro';
// Beneficios
import BenefitsGrid from '../components/beneficios/BenefitsGrid.astro';
import Stats from '../components/beneficios/Stats.astro';
---


<Layout
    title="Luatec Solutions | Infraestructura TI y Ciberseguridad"
    description="Luatec Solutions ofrece servicios integrales de conectividad, ciberseguridad y consultoría tecnológica para potenciar tu empresa. Expertos en TI."
>
    <Header />
    <main class="w-full relative px-4 md:px-0">
        <!-- Hero: Main impact fold -->
        <div class="min-h-screen w-full flex items-center justify-center relative">
            <Hero />
        </div>

        <!-- Section Divider -->
        <div class="w-full h-px bg-gradient-to-r from-transparent via-white/[0.08] to-transparent"></div>

        <!-- Desktop Stats & Team -->
        <div class="hidden md:block">
            <!-- Stats Section: Ultra Tight -->
            <div class="py-6 md:py-8 w-full flex items-center justify-center relative overflow-hidden">
                <Stats />
            </div>

            <!-- Team Section: Ultra Tight -->
            <div class="py-6 md:py-8 w-full flex items-center justify-center relative px-4 md:px-0">
                <Team />
            </div>
        </div>

        <!-- Mobile Team Section -->
        <div class="block md:hidden">
            <TeamMovil />
        </div>

        <!-- Section Divider -->
        <div class="w-full h-px bg-gradient-to-r from-transparent via-white/[0.08] to-transparent"></div>

        <!-- Solutions Carousel: Ultra Tight -->
        <div id="soluciones" class="w-full relative py-6 md:py-10">
            <SolutionsCarousel />
        </div>

        <!-- CTA Section: Mid-page conversion -->
        <CTA />

        <!-- Partners Section: Ultra Tight -->
        <div class="w-full relative pb-12">
            <Partners />
        </div>

        <!-- Footer Section -->
        <div class="w-full relative bg-[#053D8A]">
            <Footer />
        </div>
    </main>
</Layout>
