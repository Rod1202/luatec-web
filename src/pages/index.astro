---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/home/Hero.astro';
import TheConflict from '../components/home/TheConflict.astro';
import Partners from '../components/home/Partners.astro';
// Nosotros
import MissionVision from '../components/nosotros/MissionVision.astro';
import Values from '../components/nosotros/Values.astro';
import Team from '../components/nosotros/Team.astro';
// Soluciones
import SolutionsCarousel from '../components/soluciones/SolutionsCarousel.astro';
// Beneficios
import BenefitsGrid from '../components/beneficios/BenefitsGrid.astro';
import Stats from '../components/beneficios/Stats.astro';
---


<Layout
    title="Luatec Solutions | Infraestructura TI y Ciberseguridad"
    description="Luatec Solutions ofrece servicios integrales de conectividad, ciberseguridad y consultoría tecnológica para potenciar tu empresa. Expertos en TI."
>
    <Header />
    <main class="w-full relative">
        <div class="min-h-[100svh] md:h-screen w-full snap-none md:snap-start flex items-center justify-center relative">
            <Hero />
        </div>
        <div class="min-h-[100svh] md:h-screen w-full snap-none md:snap-start flex items-start md:items-center pt-24 md:pt-0 justify-center relative">
            <TheConflict />
        </div>
        <div class="min-h-[100svh] md:h-screen w-full snap-none md:snap-start flex items-start md:items-center pt-24 md:pt-0 justify-center relative overflow-y-auto md:overflow-visible">
            <Stats />
        </div>
        <div id="soluciones" class="w-full relative">
            <SolutionsCarousel />
        </div>
        <div id="beneficios" class="min-h-[100svh] md:h-screen w-full snap-none md:snap-start flex items-start md:items-center pt-24 md:pt-0 justify-center relative overflow-y-auto md:overflow-visible">
            <BenefitsGrid />
        </div>

        
        <!-- Propósito y Equipo -->
        <div id="nosotros" class="min-h-[100svh] md:h-screen w-full snap-none md:snap-start flex items-start md:items-center pt-24 md:pt-0 justify-center relative">
            <MissionVision />
        </div>
        <div class="min-h-[100svh] md:h-screen w-full snap-none md:snap-start flex items-start md:items-center pt-24 md:pt-0 justify-center relative overflow-y-auto md:overflow-visible">
            <Values />
        </div>
        <div class="min-h-[100svh] md:h-screen w-full snap-none md:snap-start flex flex-col relative overflow-y-auto md:overflow-visible">
            <div class="flex-grow flex items-start md:items-center pt-24 md:pt-0 justify-center">
                <Team />
            </div>
            <div class="w-full">
                <Partners />
            </div>
        </div>

        <div class="min-h-[100svh] md:min-h-screen w-full snap-none md:snap-start flex flex-col justify-end overflow-y-auto md:overflow-visible">
            <Footer />
        </div>
    </main>
</Layout>

<style>
/* Hide scrollbar for Chrome, Safari and Opera */
.no-scrollbar::-webkit-scrollbar {
    display: none;
}

/* Hide scrollbar for IE, Edge and Firefox */
.no-scrollbar {
    -ms-overflow-style: none;  /* IE and Edge */
    scrollbar-width: none;  /* Firefox */
}
</style>
