---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/home/Hero.astro';
import About from '../components/home/About.astro';
import Services from '../components/home/Services.astro';
import Partners from '../components/home/Partners.astro';
import WhyUs from '../components/home/WhyUs.astro';
// Nosotros
import MissionVision from '../components/nosotros/MissionVision.astro';
import Values from '../components/nosotros/Values.astro';
import Team from '../components/nosotros/Team.astro';
// Soluciones
import SolutionsList from '../components/soluciones/SolutionsList.astro';
// Beneficios
import BenefitsGrid from '../components/beneficios/BenefitsGrid.astro';
import Stats from '../components/beneficios/Stats.astro';
---


<Layout
    title="Luatec Solutions | Infraestructura TI y Ciberseguridad"
    description="Luatec Solutions ofrece servicios integrales de conectividad, ciberseguridad y consultoría tecnológica para potenciar tu empresa. Expertos en TI."
>
    <Header />
    <main>
        <Hero />
        <About />
        <Services />
        <Partners />
        <WhyUs />
    

        <!-- Nosotros Section -->
        <div id="nosotros" class="pt-20">
            <MissionVision />
            <Values />
            <Team />
        </div>

        <!-- Soluciones Section -->
        <div id="soluciones" class="pt-20">
            <SolutionsList />
        </div>


        <!-- Beneficios Section -->
        <div id="beneficios" class="pt-20">
            <BenefitsGrid />
            <Stats />
        </div>
    </main>
    <Footer />
</Layout>
